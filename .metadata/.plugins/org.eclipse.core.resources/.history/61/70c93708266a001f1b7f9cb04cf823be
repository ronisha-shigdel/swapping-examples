package Fundamentals;

public class swapping {

	public static void main(String[] args) {
		swapWithTemp(2,3);
		swapWithoutTemp(5,6);
		SwapThreeWithTemp(10,20,30);
		SwapThreeWithoutTemp(40,50,60);
		SwapFourWithTemp(70,80,90,100);
		SwapFourWithoutTemp(100,200,300,400);
	}



private static void swapWithTemp(int num1, int num2) {
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = temp;
	System.out.println("Swapping 2 numbers with temp variable:");
	System.out.println("num1 ="+ num1);
	System.out.println("num2 ="+ num2);
}

private static void swapWithoutTemp(int num1, int num2) {
	num1 = num1 + num2;
	num2= num1 - num2;
	num1 = num1 - num2;
	System.out.println("Swapping 2 numbers without temp variable:");
	System.out.println("num1 ="+ num1);
	System.out.println("num2 ="+ num2);
}

private static void SwapThreeWithTemp(int num1, int num2, int num3) {
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = num3;
	num3 = temp;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
}

private static void SwapThreeWithoutTemp(int num1, int num2, int num3) {
	num1 = num1 + num2 + num3;
	num2 = num1 - num2 - num3;
	num3 = num1 - num2 - num3;
	num1 = num1 - num2 - num3;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
}

private static void SwapFourWithTemp(int num1, int num2, int num3, int num4) {
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = num3;
	num3 = num4;
	num4 = temp;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
	System.out.println(num4);
}

private static void SwapFourWithoutTemp(int num1, int num2, int num3, int num4) {
	num1 = num1 + num2 + num3 + num4;
	num2 = num1 - num2 - num3 - num4;
	num3 = num1 - num2 - num3 - num4;
	num4 = num1 - num2 - num3 - num4;
	num1 = num1 - num2 - num3 - num4;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
	System.out.println(num4);
}
}