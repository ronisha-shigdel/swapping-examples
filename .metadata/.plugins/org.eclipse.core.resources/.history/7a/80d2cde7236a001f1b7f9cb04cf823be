package Fundamentals;

public class swapping {

	public static void main(String[] args) {
		swapWithTemp(2,3);
		swapWithoutTemp(5,6);
		SwapThreeWithTemp(10,20,30);
		SwapThreeWithoutTemp(40,50,60);
		SwapFourWithTemp(70,80,90,100);
		SwapFourWithoutTemp(100,200,300,400);
	}



private static void swapWithTemp(int a, int b) {
	int num1 = a;
	int num2 = b;
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = temp;
	System.out.println("Swapping 2 numbers with temp variable:");
	System.out.println("num1 ="+ num1);
	System.out.println("num2 ="+ num2);
}

private static void swapWithoutTemp(int a, int b) {
	int num1 = a;
	int num2 = b;
	int sum = 0;
	num1 = num1 + num2;
	num2= num1 - num2;
	num1 = num1 - num2;
	System.out.println("Swapping 2 numbers without temp variable:");
	System.out.println("num1 ="+ num1);
	System.out.println("num2 ="+ num2);
}

private static void SwapThreeWithTemp(int n1, int n2, int n3) {
	int num1 = n1;
	int num2 = n2;
	int num3 = n3;
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = num3;
	num3 = temp;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
}

private static void SwapThreeWithoutTemp(int n1, int n2, int n3) {
	int num1 = n1;
	int num2 = n2;
	int num3 = n3;
	num1 = num1 + num2 + num3;
	num2 = num1 - num2 - num3;
	num3 = num1 - num2 - num3;
	num1 = num1 - num2 - num3;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
}

private static void SwapFourWithTemp(int n1, int n2, int n3, int n4) {
	int num1 = n1;
	int num2 = n2;
	int num3 = n3;
	int num4 = n4;
	int temp = 0;
	temp = num1;
	num1 = num2;
	num2 = num3;
	num3 = num4;
	num4 = temp;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
	System.out.println(num4);
}

private static void SwapFourWithoutTemp(int n1, int n2, int n3, int n4) {
	int num1 = n1;
	int num2 = n2;
	int num3 = n3;
	int num4  = n4;
	num1 = num1 + num2 + num3 + num4;
	num2 = num1 - num2 - num3 - num4;
	num3 = num1 - num2 - num3 - num4;
	num4 = num1 - num2 - num3 - num4;
	num1 = num1 - num2 - num3 - num4;
	System.out.println("-------------------------------------------");
	System.out.println(num1);
	System.out.println(num2);
	System.out.println(num3);
	System.out.println(num4);
}
}